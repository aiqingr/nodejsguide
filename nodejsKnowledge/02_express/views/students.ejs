<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table{
            border-collapse: collapse;
        }
        th, td{
            border: 1px black solid;
            font-size: 20px;
            padding: 10px;
            text-align: center;
        }

        caption{
            font-size: 25px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Hello EJS</h1>
    <form action="/set_name" method="get">
        <input type="text" name="name" placeholder="enter your anme">
        <button>Submit</button>
    </form>

    <%for(const stu of stus){%>
        <%=stu.name %> - <%=stu.age%> - <%=stu.gender%>
        <br>
    <%}%>

    <table>
        <caption>students list</caption>
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>age</th>
                <th>gender</th>
                <th>address</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            <% for(const stu of stus) { %>
                <tr>
                    <td><%=stu.id%></td>
                    <td><%=stu.name%></td>
                    <td><%=stu.age%></td>
                    <td><%=stu.gender%></td>
                    <td><%=stu.address%></td>
                    <td>
                        <a onclick="return confirm('are you sure')" 
                        href="/delete?id=<%=stu.id%>">delete</a>
                        <a href="/update?id=<%=stu.id%>">edit</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <br>
    <form action="/student_add" method="POST">
        <div>
            <input type="text" name="name" placeholder="name">
        </div>
        <div>
            <input type="number" name="age" placeholder="age">
        </div>
        <div>
            <input type="radio" name="gender" value="male" placeholder="male">male
            <input type="radio" name="gender" value="female" placeholder="female">female
        </div>
        <div>
            <input type="text" name="address" placeholder="address">
        </div>
        <button>add</button>
    </form>
</body>
</html>